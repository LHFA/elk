 {
    "order": 0,
    "template": "cds-*-exception-*",
    "settings": {
      "index": {
        "number_of_shards": "6",
        "refresh_interval": "5s"
      }
    },
    "mappings": {
      "_default_": {
        "dynamic_templates": [
          {
            "string_fields": {
              "mapping": {
                "norms": false,
                "ignore_above": 256,
                "type": "keyword"
              },
              "match_mapping_type": "string",
              "match": "*"
            }
          }
        ],
        "_all": {
          "norms": false,
          "enabled": false
        },
        "properties": {
          "@timestamp": {
            "include_in_all": false,
            "type": "date"
          },
          "@version": {
            "include_in_all": false,
            "type": "keyword"
          },
          "msg": {
            "include_in_all": false,
            "type": "text"
          },
          "exception": {
            "include_in_all": false,
            "type": "text"
          }
        }
      }
    }
  }
